{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2022",
        "strict":true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "skipLibCheck": false,
        "lib": ["ES2022"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true
    }
}